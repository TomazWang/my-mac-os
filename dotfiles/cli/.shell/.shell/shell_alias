# ============ Aliases =====================
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"


# reload zshrc
alias reload='. ~/.zshrc'

# command overwrite
alias ls='exa'
alias ll='exa -lh --git'
alias cat='ccat'
alias img='imgcat'
alias mv='mv -v'
alias rm='rm -i -v'
# alias rm='trash'
alias cp='cp -v'
alias volume='m volume'
alias mute='m volume 0'
alias src='source'

# command alias
alias cls='clear'
alias newest='ll -s created | tr " " "\n"| tail -1' 
alias o='open'
alias oo='open .'
alias v='vim'
alias x+='chmod +x'
alias py='python3'
alias py2='python2'
alias jpter='jupyter'
alias pip='pip3'
alias trans='~/.shell/trans'
alias transzh='~/.shell/trans :zh-TW -b'
alias readme='vim README.md'
alias hyper='open -a hyper'
alias hy='hyper'
alias tldr='tldr -v'
alias gw='./gradlew'

# alias suffix for file extensions
# usage: just involke the file as a command

# -- img
alias -s png='img'
alias -s jpg='img'
alias -s jpeg='img'
# -- media
alias -s mp3='mpv'
alias -s wav='mpv'

alias -s pdf='open'
alias -s zip='unzip -l'
alias -s 7z='7z l'
alias -s txt='cat'
alias -s md='code'
alias -s json='cat'


# Dotfiles quick edit
alias vimz='vim $HOME/.zshrc'
alias vimzl='vim $HOME/.zsh.local'
alias vimh='vim $HOME/.hyper.js'
alias vimt='vim $HOME/.tmux.conf'
